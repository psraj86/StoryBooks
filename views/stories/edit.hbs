<h3>Edit Story</h3>
<div class="row">
    <form action="/stories/{{story._id}}" method="POST" class="col s12">
        <!-- Hidden Input-->
        <input type="hidden" name="_method" value="PUT"/>
        <!-- Title -->
        <div class="row">
            <div class="input-field">
                <input type="text" name="title" id="title" value="{{story.title}}">
                <label for="title">Title</label>
            </div>
        </div>
        <!-- Status -->
        <div class="row">
            <div class="input-field">
                <select name="status" id="status">
                    {{#select story.status}}
                    <option value="public" selected>Public</option>
                    <option value="private">Private</option>
                    {{/select}}
                </select>
                <label for="status">Status</label>
            </div>
        </div>

        <!-- Body -->
        <div class="row">
            <div class="input-field">
                <h5>Tell Us Your Story</h5>
                <textarea name="body" id="body">{{story.body}}</textarea>
                
            </div>
        </div>
        <!-- Button -->
        <div class="row">
            <input type="submit" value="Save" class="btn">
            <a href="/dashboard" class="btn orange">Cancel</a>
        </div>
    </form>
</div>